
def nth_largest_number(lst, N):
    if N <= 0:
        return "N should be a positive integer."
    if N > len(lst):
        return "N is larger than the number of elements in the list."
    
    sorted_list = sorted(lst, reverse=True)
    
    return sorted_list[N - 1]

lst = [14, 67, 48, 23, 5, 62]
N = 4
result = nth_largest_number(lst, N)
print(f"{N}th Largest number: {result}")

test_cases = [0, -5, 1, 3]
for test_case in test_cases:
    result = nth_largest_number(lst, test_case)
    print(f"N = {test_case}: {result}")
